# Contributor: Max Roder <maxroder@web.de>

# To port this PKGBUILD to another language of tor-browser you 
# have to change $pkgname, $_language, $pkgdesc and $url in PKGBUILD
# AND (!) the first line in the .install file!

pkgname='tor-browser-fr'
pkgver='5.0.4'
_language='fr'
pkgrel=1
pkgdesc='Le pack officiel du projet Tor, surfez anonymement avec firefox et Tor'
url='https://www.torproject.org/projects/torbrowser.html.fr'
arch=('x86_64')
license=('GPL')
depends=('gtk2' 'mozilla-common' 'libxt' 'startup-notification' 'mime-types'
         'dbus-glib' 'alsa-lib' 'desktop-file-utils' 'hicolor-icon-theme'
         'libvpx' 'icu' 'libevent' 'nss' 'hunspell' 'sqlite3')
optdepends=('qarma: simple dialog boxes'
            'kde-baseapps: KDE dialog boxes'
            'gst-plugins-good: h.264 video'
            'gst-libav: h.264 video'
            'pulsaudio: PulseAudio audio driver'
            'libnotify: Gnome dialog boxes')
install="${pkgname}.install"
source=("https://dist.torproject.org/torbrowser/5.0.4/tor-browser-linux64-${pkgver}_${_language}.tar.xz"
https://dist.torproject.org/torbrowser/5.0.4/tor-browser-linux64-5.0.4_fr.tar.xz
"${pkgname}.desktop"
"${pkgname}.png"
"${pkgname}.sh")

package() {
   cd "${srcdir}"

   sed -i "s/REPL_NAME/${pkgname}/g"       ${pkgname}.sh
   sed -i "s/REPL_VERSION/${pkgver}/g"	    ${pkgname}.sh
   sed -i "s/REPL_LANGUAGE/${_language}/g" ${pkgname}.sh

   sed -i "s/REPL_NAME/${pkgname}/g"       ${pkgname}.desktop
   sed -i "s/REPL_LANGUAGE/${_language}/g" ${pkgname}.desktop
   sed -i "s/REPL_COMMENT/${pkgdesc}/g"    ${pkgname}.desktop

   install -Dm 644 ${pkgname}.desktop      ${pkgdir}/usr/share/applications/${pkgname}.desktop
   install -Dm 644 ${pkgname}.png          ${pkgdir}/usr/share/pixmaps/${pkgname}.png
   install -Dm 755 ${pkgname}.sh           ${pkgdir}/usr/bin/${pkgname}
   install -Dm 644 tor-browser-linux64-${pkgver}_${_language}.tar.xz ${pkgdir}/opt/${pkgname}/tor-browser-linux64-${pkgver}_${_language}.tar.xz
}
sha512sums=('22612782d2d0541ea1a9dd4382236cab6656744c9f21d9b11630fcc74fa0917c6b4623af0bad91b8e862ebd48f3b5d220c2de647450b39ed9ba27e92c5f7501d'
            '22612782d2d0541ea1a9dd4382236cab6656744c9f21d9b11630fcc74fa0917c6b4623af0bad91b8e862ebd48f3b5d220c2de647450b39ed9ba27e92c5f7501d'
            'ea785893bfec7e5d0c5caf6f73a119950f12751cec39186bb2335f410f30e207f43f7bc0bb9bac583d811d21e91157fd76dbdd6c6256ff680c065f477b8bb486'
            '0a68a0a8cfeea630a91036d86b167cf640ab378e64e0d8ab55e9f99cde3c9d6a2d762ea0f5528f8a8e1579600fcc59eaa72ba499d95daeb4334e81ab644bfb02'
