avail_lang_list=( en fr ar de es fa it ko nl pl pt ru tr vi zh )

selected_lang=$(
c=${#avail_lang_list[@]}
d=0
while [ $d -lt $c ]
do
    echo FALSE
    echo ${avail_lang_list[$d]}
    ((d++))
done | yad --checklist --list --column "#" --column "LANG" --hide-column 1
)

case $? in
    0) for l in ${selected_lang}
            do echo -e "install $l en cours...\n"
        done;;
    *) exit 1;;
esac